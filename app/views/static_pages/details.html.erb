<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "jquery-1.9.1.js", "jquery-ui-1.10.1.custom.min.js", "autocomplete-rails.js" %>
  <%= stylesheet_link_tag "jquery-ui-1.10.1.custom.css" %>
  <style>
    html, body { height: 100%; width: 100%; padding: 0; margin: 0; }
    #details_list { width: 100%; height: 25%; }
    #network_visualization { width: 100%; height: 75%; }
  </style>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
  <body>
    <div id="details_list">
      <%= render 'layouts/header' %>
      <br><br>
      <div class="span9"><h4><%= @select_term %> - <%= @select_ontology %></h4></div>
    </div>
    <div id="network_visualization">
      <iframe src="http://genemania.org/link?o=3702&g=PHYB|ELF3|COP1|SPA1|FUS9" width="100%" height="100%"></iframe>
    </div>
  </body>
</html>
