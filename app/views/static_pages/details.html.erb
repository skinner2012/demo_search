<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "jquery-1.9.1.js", "jquery-ui-1.10.1.custom.min.js", "autocomplete-rails.js" %>
  <%= stylesheet_link_tag "jquery-ui-1.10.1.custom.css" %>
  <style>
    html, body { height: 100%; width: 100%; padding: 0; margin: 0; }
    #details_list { width: 100%; height: 25%; }
    #network_visualization { width: 100%; height: 75%; }
  </style>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
  <body>
    <div id="details_list">
      <%= render 'layouts/header' %>
      <br><br>
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span6">
            <dl class="dl-horizontal">
              <dt>Term</dt><dd><%= @term_name %> (<%= @term_id %>)</dd>
              <dt>Ontology</dt><dd><%= @ontology_name %> (<%= @ontology_id %>)</dd>
              <dt>Bioportal</dt><dd><%= link_to @bioportal_url, @bioportal_url, :target => '_blank' %></dd>
              <% if @auc.nil? %>
                <dt>AUC</dt><dd>N/A</dd>
              <% else %>
                <dt>AUC</dt><dd><%= @auc %></dd>
              <% end %>
              <dt>Number of Genes</dt><dd><%= @num_of_genes %></dd>
            </dl>
          </div>
          <div class="span6">
            <dl class="dl-horizontal">
              <dt>List of Genes</dt>
              <dd>
                <select multiple="multiple">
                  <% @gene_list.each do |gene| %>
                    <option><%= gene[1] %> (<%= gene[0] %>)</option>
                  <% end %> 
                </select>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
    <div id="network_visualization">
      <iframe src="http://genemania.org/search/human/<%= @genes %>" width="100%" height="100%"></iframe>
    </div>
  </body>
</html>
